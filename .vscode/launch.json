{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Terrain_Stitcher",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/extern/terrain_stitcher/main.py",
            "console": "integratedTerminal",
            "args": [
                "-textureDir",
                "${workspaceRoot}/extern/terrain_stitcher/terrains/orthoimages",
                "-elevationFile",
                "${workspaceRoot}/extern/terrain_stitcher/terrains/USGS_13_n40w083_20230911.tif",
                "-output",
                "${workspaceRoot}/result",
                "-scale",
                "0.20"
            ]
        },
        {
            "name": "Terrain_M2M",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/terrain_stitcher",
            "python": "${command:python.interpreterPath}",
            "justMyCode": false,
            "module": "terrain_stitcher",
            "console": "integratedTerminal",
            "args": ["gather-ortho",
                "-s", "Shape.json"
            ]
        },
        {
            "name": "Process_Terrain_Files",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/terrain_stitcher",
            "python": "${command:python.interpreterPath}",
            "justMyCode": false,
            "module": "terrain_stitcher",
            "console": "integratedTerminal",
            "args": ["prep-ortho",
                "-i", "tmpDownloads", 
                "-o", "finalDownloads"
            ]
        },
        {
            "name": "Create_Point",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/terrain_stitcher",
            "python": "${command:python.interpreterPath}",
            "justMyCode": false,
            "module": "terrain_stitcher",
            "console": "integratedTerminal",
            "args": ["create-bounds",
                "--lat", "39.215556", 
                "--lon", "-82.220556",
                "-t", "POINT"
            ]
        }
    ]
}